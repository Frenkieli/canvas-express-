    <button class="alert_clear">摔跤</button>
  </div>
  <div id="3">
    臥室<button class="alert">火警</button>
    <button class="alert">跌倒</button>
    <button class="alert">摔跤</button>
    <button class="alert_clear">火警</button>
    <button class="alert_clear">跌倒</button>
    <button class="alert_clear">摔跤</button>
  </div>
